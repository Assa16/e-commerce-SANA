{{ form_start(form) }}
<div class="container mt-4">
<div class="jumbotron">
<div class="row">
<div class="col-md-2">{{ form_row(form.category) }}</div>
</div>
<div class="row">
<div class="col-md-2">{{ form_row(form.name) }}</div>
<div class="col-md-2">{{ form_row(form.price) }}</div>
<div class="col-md-2">{{ form_row(form.description) }}</div>
</div>
<div class="row">
<div class="col-md-2">{{ form_row(form.stock) }}</div>
<div class="col-md-2">{{ form_row(form.picture) }}</div>
</div>
