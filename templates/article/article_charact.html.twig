{% extends 'base.html.twig' %}

{% block title %}{{ article.name }}{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <tbody>
            <tr>

                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ article.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Caract√©ristiques</th>
                <td>
                    <ul>
                        {% for cat in article.characteristic %}
                            <li>{{ cat.getCharacteristicName}}: {{ cat.getType}}</li>
                        {% endfor %}  
                    </ul>
                </td>
            </tr>
       </tbody>
    </table>
    <a href="{{ path('article_index') }}">back to list</a>
    <a href="{{ path('add_article_characteristic', {'id': article.id}) }}">add caracteristiques</a>


{% endblock %}
