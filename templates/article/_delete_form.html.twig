<form method="post" action="{{ path('article_delete', {'id': article.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer ce produit?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <br>
    <button class="btn btn-primary btn-sm">Supprimer le produit</button>
    
</form>
